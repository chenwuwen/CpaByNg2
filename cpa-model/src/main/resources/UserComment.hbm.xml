<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.kanyun.cpa.model.entity.user.UserComment" table="user_comment" schema="cpa">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="reId">
            <column name="re_id" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="commentDate">
            <column name="comment_date" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="comment">
            <column name="comment" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>